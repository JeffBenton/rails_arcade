<div class="row">
  <div class="col col-md-10">
    <h3>Name: <%= @user.name %></h3>
  </div>
  <% if @user.id == session[:user_id] %>
    <%= button_to "Edit", edit_user_path(@user), method: 'get', class: "btn btn-primary"%>
  <% end %>
</div>

<div class="row">
  <div class="col col-md-4">
    <h4>Tokens: <%= @user.tokens %></h4>
  </div>
</div>

<div class="row">
  <div class="col col-md-6">
    <h3>Games</h3>
    <% @user.games.order(name: :asc).uniq.each do |game| %>
      <div class="row">
        <p><%= link_to game.name, game_path(game) %></p>
      </div>
    <% end %>
  </div>

  <div class="col col-md-6">
    <h3>Plays</h3>
    <% @user.plays.order(id: :desc).each do |play| %>
      <div class="row">
        <p><%= "#{play.game.name} on #{play.difficulty}" %></p>
      </div>
    <% end %>
  </div>
</div>